.wrap{
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  background: rgba(0,0,0, .5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.content{
  width: 400rpx;
  height: 250rpx;
  background: #fff;
  padding: 18rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-radius: 10rpx;
  box-shadow: 8rpx 5rpx 10rpx rgba(0,0,0,.8);
}
.title{
  width: 100%;
  display: flex;
  flex-direction: row-reverse;
}
.inputS{
  border: 1px solid #ccc;
}
.btn{
  width: 100%;
  display: flex;
  flex-direction: row-reverse;
}