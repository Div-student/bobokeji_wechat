.boxWrap{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  width: 360rpx;
  outline: 1px solid #ccc;
}
.boxWrap .img{
  width: 360rpx;
  height: 360rpx;
}

.boxWrap .img .image{
  width: 100%;
  height: 100%;
}

.boxWrap .title{
  padding: 0 10rpx;
  font-size: 28rpx;
}
.boxWrap .discript{
  padding: 0 10rpx;
  font-size: 26rpx;
  font-weight: 300;
}
.boxWrap .price{
  padding: 0 10rpx;
  font-size: 26rpx;
  color: red;
  font-weight: 300;
}
.forsalePrice{
  color: #ccc;
  margin-left: 10rpx;
  text-decoration: line-through
}
.comment{
  padding: 0 10rpx;
  box-sizing: border-box;
  width: 100%;
  color: #ccc;
  font-size: 20rpx;
  display: flex;
  justify-content: space-between;
}